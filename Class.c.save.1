#include "Class.h"
#include <stdio.h>

#include <gtk/gtk.h>

Class * showAllClasses(){
  FILE * fp = fopen("classesList.txt", "r");
  
  if(fp == NULL){
      return 0;
  }
  else{
    
     int id;
     char * name;
     Class * classes = malloc(2*sizeof(Class)); 
     
     if(fp){
       while(fscanf(fp, "%d %s", &id, name) != EOF){
           classes->id = id;
           classes->name = name;
           classes++;     
       }
     }
     return classes;
 }
}

static void
activate (GtkApplication *app,
          gpointer        user_data)
{
    GtkWidget *window;
    GtkWidget *button[2];
    GtkWidget *button_box[2]
    Class * array = showAllClasses();

    window = gtk_application_window_new (app);
    gtk_window_set_title (GTK_WINDOW (window), "Classes");
    gtk_window_set_default_size (GTK_WINDOW (window), 200, 200);
    
    int i = 0;
    while(array != NULL)
       button_box[i] = gtk_button_box_new (GTK_ORIENTATION_HORIZONTAL);
       gtk_container_add (GTK_CONTAINER (window), button_box[i]);
       
       button[i] = gtk_button_new_with_label (*array->name);
       //g_signal_connect (button, "clicked", G_CALLBACK (print_hello), NULL);
       //g_signal_connect_swapped (button, "clicked", G_CALLBACK (gtk_widget_destroy), window);
       gtk_container_add (GTK_CONTAINER (button_box[i]), button[i]);
       array++;
    }
    gtk_widget_show_all (window);
}

int
main (int    argc,
      char **argv)
{
    GtkApplication *app;
    int status;
    
    app = gtk_application_new ("org.gtk.example", G_APPLICATION_FLAGS_NONE);
    g_signal_connect (app, "activate", G_CALLBACK (activate), NULL);
    status = g_application_run (G_APPLICATION (app), argc, argv);
    g_object_unref (app);
    
    return status;
}
